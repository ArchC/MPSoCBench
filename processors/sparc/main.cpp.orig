const char *project_name="sparc";
const char *project_file="sparc.ac";
const char *archc_version="2.1";
const char *archc_options="-abi ";

#include  <iostream>
#include  <systemc.h>
#include  "ac_stats_base.H"
#include  "sparc.H"



int sc_main(int ac, char *av[])
{

  //!  ISA simulator
  sparc sparc_proc1("sparc");

#ifdef AC_DEBUG
  ac_trace("sparc_proc1.trace");
#endif 

  sparc_proc1.init(ac, av);
  cerr << endl;

  sc_start();

  sparc_proc1.PrintStat();
  cerr << endl;

#ifdef AC_STATS
  ac_stats_base::print_all_stats(std::cerr);
#endif 

#ifdef AC_DEBUG
  ac_close_trace();
#endif 

#ifdef POWER_SIM
	// Connect Power Information from ArchC with PowerSC
	sparc_proc1.ps.powersc_connect();
	// PowerSC Report related to ArchC Processor
	sparc_proc1.ps.report();
#endif

  return sparc_proc1.ac_exit_status;
}
